@model FindYourMeal.ViewModels.OndeAlmocarViewModel
@{
    ViewData["Title"] = "Onde almoçar?";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="BuscarRestaurantes" method="post">
    <div class="form-horizontal">
        <label asp-for="Pessoas" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Pessoas)
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Onde almoçar?" class="btn btn-default" onclick="return ($('input[type=checkbox]:checked').length > 0);" />
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Opções para almoçar?
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OpcoesDeRestaurante)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>